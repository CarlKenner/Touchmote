<Window x:Class="WiiTUIO.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cursor"
        Topmost="True"
        Top="0"
        Left="0"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        ShowInTaskbar="False" >
    <Canvas Name="baseCanvas">
        <Grid MouseUp="Grid_MouseUp" Name="baseGrid" Background="#33000000">
            <Border MouseUp="layoutChooserOverlay_MouseUp" Name="layoutChooserOverlay" Width="500" Height="680" Background="#F20A0A0A" BorderThickness="3" BorderBrush="Red">
                <StackPanel>
                    <Label Name="title" Content="Choose a layout" FontSize="30" FontFamily="Segoe UI Light" Foreground="White" Margin="10"></Label>
                    <ScrollViewer PanningMode="VerticalOnly" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden" Height="600">
                        <StackPanel Name="layoutList">

                        </StackPanel>
                    </ScrollViewer>
                </StackPanel>
            </Border>
        </Grid>
        <StackPanel Name="noticeStack" Canvas.Right="50" Canvas.Top="50" Width="500">
            
        </StackPanel>
    </Canvas>
</Window>
