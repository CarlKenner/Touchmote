<UserControl
  x:Class="WiiTUIO.ClientForm"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:tb="http://www.hardcodet.net/taskbar"
    Background="Transparent" Padding="6,6,6,6">
    <Grid Margin="0" Background="Transparent">
            
        <Rectangle Stroke="Black" Margin="4" RadiusX="0" RadiusY="0" Opacity="0.16"/>
        <Rectangle Stroke="Black" Margin="3" RadiusX="0" RadiusY="0" Opacity="0.12"/>
        <Rectangle Stroke="Black" Margin="2" RadiusX="1" RadiusY="1" Opacity="0.10"/>
        <Rectangle Stroke="Black" Margin="1" RadiusX="2" RadiusY="2" Opacity="0.05"/>
        <Rectangle Stroke="Black" Margin="0" RadiusX="3" RadiusY="3" Opacity="0.03"/>
            
        <StackPanel Margin="2,2,3,3" Background="White">
                <GroupBox Header="Mode" Margin="10" Padding="10,0,10,10">
                    <StackPanel>
                        <Label Content="Input reading"/>
                        <ComboBox Name="ModeComboBox" HorizontalAlignment="Left" Height="24" VerticalAlignment="Top" Width="183" SelectionChanged="ComboBox_SelectionChanged_1">
                            <ComboBoxItem Name="cbiPointer" IsSelected="True">Wii Sensor Bar</ComboBoxItem>
                            <ComboBoxItem Name="cbiPen">IR Pen</ComboBoxItem>
                        </ComboBox>
                    <Button x:Name="btnSettings" HorizontalAlignment="Right" Margin="0,10,0,0" Width="75" Content="Settings" Click="btnSettings_Click"/>
                </StackPanel>
                </GroupBox>
                <GroupBox Header="TUIO Settings" Margin="10" Padding="10,0,10,10">
                    <StackPanel>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Row="0" Grid.Column="0" Content="IP Address"/>
                            <Label Grid.Row="0" Grid.Column="1" Content="TUIO Port"/>
                            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0">
                                <TextBox x:Name="txtIPAddress" Width="100" Text="127.0.0.1"/>
                                <Label Content=":"/>
                            </StackPanel>
                            <TextBox x:Name="txtPort" Grid.Row="1" Grid.Column="1" Text="3333"/>
                        </Grid>
                        <DockPanel Margin="0,5,0,0">
                            <CheckBox x:Name="chkTUIOEnabled" Content="TUIO Multi Touch Events" Checked="chkTUIOEnabled_Checked" Unchecked="chkTUIOEnabled_Unchecked" VerticalAlignment="Center" />
                            <Button x:Name="btnAboutTUIO" Click="btnAboutTUIO_Click" HorizontalAlignment="Right" Padding="5,0" Content="?"/>
                        </DockPanel>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="Windows Touch Settings" Margin="10,0" Padding="10">
                    <DockPanel>
                        <CheckBox x:Name="chkWin7Enabled" Content="Windows Multi Touch" Checked="chkWin7Enabled_Checked" Unchecked="chkWin7Enabled_Unchecked" VerticalAlignment="Center" />
                        <Button x:Name="btnAboutWinTouch" Click="btnAboutWinTouch_Click" HorizontalAlignment="Right" Margin="5,0,0,0" Padding="5,0" Content="?"/>
                    </DockPanel>
                </GroupBox>
                <GroupBox Header="Wiimote" Margin="10,0" Padding="10">
                    <StackPanel>
                        <DockPanel>
                            <Button x:Name="btnConnect" Click="btnConnect_Click" Margin="0,0,0,10" Width="75" Content="Connect"/>
                            
                        </DockPanel>
                        <DockPanel>
                            <ProgressBar x:Name="barBattery" Maximum="200" Width="180" Height="35" Panel.ZIndex="1" />
                        </DockPanel>
                    </StackPanel>
                </GroupBox>
                <DockPanel Margin="10">
                    <Button x:Name="btnExit"  Click="btnExit_Click"  Width="60" HorizontalAlignment="Right" Margin="80, 0, 5, 0" Content="Quit"/>
                    <!--<Button Name="btnHide"  Click="btnHide_Click"  Width="60" HorizontalAlignment="Right" Margin="5, 0, 5, 0">Hide</Button>-->
                    <Button x:Name="btnAbout" Click="btnAbout_Click" Width="60" HorizontalAlignment="Right" Margin="5, 0, 5, 0" Content="About"/>
                </DockPanel>
            </StackPanel>
        <Canvas Margin="281,-11,-273,19">
            <Border Name="brdOverlay" MouseDown="brdOverlay_MouseDown" CornerRadius="0" Visibility="Hidden" Padding="5" >
            </Border>
        </Canvas>
    </Grid>
</UserControl>
